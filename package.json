  "dependencies": {
    "pdfkit": "^0.15.0",
    "pdfjs-dist": "^4.6.82",
    "marked": "^12.0.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "typescript": "^5.4.2",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "vitest": "^1.5.0",
    "@types/pdfkit": "^0.12.7",
    "eslint-config-prettier": "^9.1.0"
  },
  "keywords": [
    "engine",
    "pdfjs",
    "rich"
