{
  "name": "@ideadesignmedia/convert-pdf-md",
  "version": "1.0.0",
  "description": "Tiny TypeScript CLI to convert PDF <-> Markdown (basic, lightweight).",
  "repository": {
    "type": "git",
    "url": "https://github.com/ideadesignmedia/convert-pdf-md.git"
  },
  "author": "Idea Design Media",
  "license": "MIT",
  "type": "commonjs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "convert-pdf-md": "dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
